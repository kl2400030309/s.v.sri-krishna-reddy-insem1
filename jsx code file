import React, { useState } from 'react';
import './ClickEvent.css'; // Import the CSS file

const ClickEvent = () => {
  const [message, setMessage] = useState('Click the button to see magic!');

  const handleClick = () => {
    setMessage('🎉 Button was clicked!');
    // Alternatively, you can use alert:
    // alert('Button was clicked!');
  };

  return (
    <div className="click-container">
      <button className="click-button" onClick={handleClick}>Click Me</button>
      <p className="click-message">{message}</p>
    </div>
  );
};

export default ClickEvent;
